{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/renderer/lib/types/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "./out/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/renderer/src/*"
      ],
      "@components/*": [
        "src/renderer/src/components/*"
      ],
      "@lib/*": [
        "src/renderer/lib/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
